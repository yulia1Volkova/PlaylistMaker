<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/settings_button"
    android:background="?attr/colorPrimary"
    android:orientation="horizontal"
    android:paddingStart="@dimen/search_padding"
    android:paddingEnd="@dimen/search_padding">

    <ImageView
        android:id="@+id/trackCover"
        android:layout_width="@dimen/image_size"
        android:layout_height="@dimen/image_size"
        android:layout_marginTop="@dimen/search_margin"></ImageView>

    <LinearLayout
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/search_margin"
        android:layout_marginEnd="@dimen/search_margin"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/trackName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:ellipsize="end"
            android:fontFamily="@font/ys_display_regular"
            android:lines="1"
            android:textColor="?attr/colorOnPrimary"
            android:textFontWeight="400"
            android:textSize="@dimen/settings_text_size"
            tools:text="TrackName">

        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="@dimen/zero"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/artistName"
                    style="@style/TrackInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    tools:text="Artist">

                </TextView>
            </FrameLayout>

            <ImageView
                android:layout_width="@dimen/search_padding"
                android:layout_height="@dimen/search_padding"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic"></ImageView>

            <TextView
                android:id="@+id/trackTime"
                style="@style/TrackInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:lines="1"
                tools:text="2:55"></TextView>
        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/image_size_small"
        android:layout_height="@dimen/image_size_small"
        android:layout_gravity="center_vertical"
        android:src="@drawable/arrow_forward"></ImageView>

</LinearLayout>