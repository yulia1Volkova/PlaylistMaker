<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:insetTop">@dimen/zero</item>
        <item name="android:insetBottom">@dimen/zero</item>
        <item name="cornerRadius">@dimen/medium_padding</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">10dp</item>
        <item name="iconTint">@color/text_color</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="SettingsTextViewList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_button</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">@dimen/medium_padding</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:background">?attr/color</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="TrackInfo">
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="NoInternetImg">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">@dimen/placeholder_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:src">@drawable/nointd</item>
    </style>

    <style name="NothingFound">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/placeholder_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:src">@drawable/nothingn</item>
    </style>

    <style name="ButtonUpdate">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="backgroundTint">@color/text_color</item>
    </style>

    <style name="AudioPlayerBottomLeft">
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">@dimen/audio_bottom_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="AudioPlayerBottomRight">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/audio_bottom_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="AudioPlayerLike">
        <item name="android:background">@drawable/round_button</item>
       <!-- <item name="android:src">@drawable/like</item>-->
    </style>

    <style name="AudioPlayerAddImageButton">
        <item name="android:background">@drawable/round_button</item>
       <!-- <item name="android:src">@drawable/addtrack</item>-->
    </style>

    <style name="AudioPlayerPlay">
        <item name="android:background">@drawable/round_button</item>
    </style>

</resources>