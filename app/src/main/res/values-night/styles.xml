<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TrackInfo">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/black</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="NoInternetImg">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/black</item>
        <item name="android:textSize">@dimen/placeholder_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:src">@drawable/nointer</item>
    </style>

    <style name="NothingFound">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/black</item>
        <item name="android:textSize">@dimen/placeholder_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:src">@drawable/nothing</item>
    </style>

    <style name="ButtonUpdate">
    <item name="android:textColor">@color/text_color</item>
    <item name="android:textSize">@dimen/settings_text_size</item>
    <item name="android:fontFamily">@font/ys_display_medium</item>
    <item name="android:textFontWeight">500</item>
    <item name="backgroundTint">@color/white</item>
    </style>

    <style name="AudioPlayerLike">
        <item name="android:background">@drawable/round_button_dark</item>
        <item name="android:src">@drawable/like_dark</item>
    </style>

    <style name="AudioPlayerAddImageButton">
        <item name="android:background">@drawable/round_button_dark</item>
        <item name="android:src">@drawable/add_track_dark</item>
    </style>

    <style name="AudioPlayerPlay">
        <item name="android:background">@drawable/round_button_dark</item>
    </style>


</resources>